<%= setup_context(:object => @patron_stat, :title => @patron_stat.display_string) %>

<%= form_for @patron_stat, :as => "patron_stat", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form', :id => "patron_stat_form"}.merge(update_monitor_params(@patron_stat)) do |f| %>
  <%= form_context :patron_stat, @patron_stat do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>

      <div class="col-md-9">
        <%= render_aspace_partial :partial => "patron_stats/toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "patron_stat" %>
          <h2><span class="label label-info"><%= I18n.t("patron_stat._singular") %></span></h2>
          <input type="hidden" name="_method" value="put" />
          <%= render_aspace_partial :partial => "patron_stats/form", :locals => {:form => form} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
