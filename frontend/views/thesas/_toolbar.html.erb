<% if user_can?('update_resource_record') %>
  <div class="row">
    <div class="col-md-12">
      <div class="record-toolbar">
          <% if !['edit', 'update', 'create'].include?(controller.action_name) %>
            <div class="btn-group pull-left">
              <%= link_to I18n.t("actions.edit"), {:controller => :thesas, :action => :edit, :id => @thesa.id}, :class => "btn btn-sm btn-primary" %>
            </div>
          <% end %>
        <% if ['new', 'create', 'edit', 'update'].include?(controller.action_name) %>
          <div class="pull-left save-changes">
            <button type="submit" class="btn btn-primary btn-sm"><%= I18n.t("actions.save_prefix") %></button>
          </div>
        <% end %>
        <% if ['edit', 'update'].include?(controller.action_name) %>
          <div class="pull-left revert-changes">
            <%= link_to I18n.t("actions.revert"), {:controller => :thesas, :action => :edit, :id => @thesa.id}, :class => "btn btn-sm btn-default" %>
            <%= I18n.t("actions.toolbar_disabled_message") %>
          </div>
        <% end %>
        <div class="btn-toolbar pull-right">
          <div class="btn-group">
            <% if user_can?('delete_archival_record') %>
              <% if user_can?('delete_archival_record') %>
                <div class="btn btn-inline-form">
                  <%= button_delete_action url_for(:controller => :thesas, :action => :delete, :id => @thesa.id) %>
                </div>
              <% end %>
            <% end %>
          </div><!-- btn-group -->
        </div><!-- btn-toolbar pull-right -->
        <div class="clearfix"></div>
      </div><!-- record-toolbar -->
    </div><!-- col-md-12 -->
  </div><!-- row -->
<% end %>