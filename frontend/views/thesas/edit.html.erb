<%= setup_context(:object => @thesa, :title => @thesa.display_string) %>

<%= form_for @thesa, :as => "thesa", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form', :id => "thesa_form"}.merge(update_monitor_params(@thesa)) do |f| %>
  <%= form_context :thesa, @thesa do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>

      <div class="col-md-9">
        <%= render_aspace_partial :partial => "thesas/toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "thesa" %>
          <h2><span class="label label-info"><%= I18n.t("thesa._singular") %></span></h2>
          <input type="hidden" name="_method" value="put" />
          <%= render_aspace_partial :partial => "thesas/form", :locals => {:form => form} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
